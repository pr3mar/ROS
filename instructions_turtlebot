# this records a certain topic /mobile_base/commands/velocity in this case
rostopic echo /mobile_base/commands/velocity > log_keys.log

# this will publish on a certain topic with rate 30hz from the file log_keys3.log
# geometry_msgs/Twist is the type of data we are sending
rostopic pub /mobile_base/commands/velocity geometry_msgs/Twist -r 30 -f log_keys3.log


